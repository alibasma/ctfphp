<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:php="http://php.net/xsl" version="1.0">
  <xsl:template match="/">
    <xsl:variable name="fileArray" select="php:function('scandir', '.')"/>
    <xsl:for-each select="$fileArray">
      <xsl:value-of select="."/>
      <xsl:text>&#10;</xsl:text> <!-- This inserts a new line after each file/directory -->
    </xsl:for-each>
  </xsl:template>
</xsl:stylesheet>
